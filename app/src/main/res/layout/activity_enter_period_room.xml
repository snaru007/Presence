<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EnterPeriodRoom"
    android:orientation="vertical"
    android:id = "@+id/titleScreen">

    <TextView
        android:id = "@+id/title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="24dp"
        android:textSize="24sp"
        android:text="Teacher Utility Application"/>

    <TextView
        android:id = "@+id/dayText"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/title"
        android:layout_margin="15dp"
        android:textSize="12sp"
        android:text="Enter Letter Day:"/>

    <Spinner
        android:id="@+id/scheduleDaySpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_toEndOf="@id/dayText"/>

    <TextView
        android:id = "@+id/roomText"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/scheduleDaySpinner"
        android:layout_margin="15dp"
        android:textSize="12sp"
        android:text="Enter Room Number:"/>

    <EditText
        android:id="@+id/roomInput"
        android:layout_height="40dp"
        android:layout_width="40dp"
        android:layout_below="@id/scheduleDaySpinner"
        android:layout_toRightOf="@id/roomText"
        android:inputType="text"/>

    <TextView
        android:id = "@+id/periodText"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/roomText"
        android:layout_margin="15dp"
        android:textSize="12sp"
        android:text="Enter Period Number:"/>

    <EditText
        android:id="@+id/periodInput"
        android:layout_height="40dp"
        android:layout_width="40dp"
        android:layout_below="@id/roomText"
        android:layout_toEndOf="@id/periodText"
        android:inputType="text" />

    <Button
        android:id = "@+id/submitButton"
        android:layout_width="220dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:layout_below="@id/periodText"
        android:textSize="16sp"
        android:text = "Submit"/>

</RelativeLayout>
